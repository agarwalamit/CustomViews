<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.example.customviews"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

  <com.example.customviews.CustomHorizontalScrollView
        android:id="@+id/customhorizontalscrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.example.customviews.CustomHorizontalScrollView>
    <com.example.customviews.CategoryStoreThreeItemWidget
        android:id="@+id/categorystorethreeitemwidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.example.customviews.CategoryStoreThreeItemWidget>

    <com.example.customviews.CategoryStoreTwoCardWidget
        android:id="@+id/categorystoretwocardwidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.example.customviews.CategoryStoreTwoCardWidget>

</LinearLayout>